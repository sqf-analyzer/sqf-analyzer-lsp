{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"group": "build",
			"type": "npm",
			"script": "build-base",
			"path": "client/",
			"problemMatcher": {
				"base": "$tsc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/editors/code/"
				]
			},
		},
	]
}