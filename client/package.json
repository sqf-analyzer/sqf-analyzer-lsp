{
	"name": "sqf-analyzer",
	"displayName": "sqf-analyzer",
	"description": "SQF language support for Visual Studio Code",
	"license": "MIT",
	"version": "0.0.8",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"sqf"
	],
	"repository": {
		"url": "https://github.com/sqf-analyzer/sql-analyzer-lsp"
	},
	"publisher": "SQF-analyzer",
	"engines": {
		"vscode": "^1.71.0"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sqf-analyzer.restart",
				"title": "sqf-analyzer: Restart Server",
				"category": "sqf"
			}
		],
		"languages": [
			{
				"id": "sqf",
				"extensions": [
					".sqf"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "sqf-analyzer",
			"properties": {
				"sqf-analyzer.trace.server": {
					"type": "string",
					"scope": "window",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"enumDescriptions": [
						"No traces",
						"Error only",
						"Full log"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"activationEvents": [
		"onLanguage:sqf"
	],
	"scripts": {
		"build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node16",
		"compile": "pnpm run build-base --sourcemap",
		"package": "vsce package --no-dependencies",
		"watch": "pnpm run build-base -- --sourcemap --watch",
		"check": "tsc --noEmit",
		"vscode:prepublish": "pnpm run build-base --minify",
		"test-compile": "tsc -p ./",
		"lint": "eslint ./src --ext ts",
		"test": ""
	},
	"dependencies": {
		"vscode-languageclient": "^8.1.0"
	},
	"devDependencies": {
		"@types/node": "^20.4.5",
		"@types/vscode": "~1.71.0",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"@vscode/vsce": "^2.20.1",
		"esbuild": "^0.18.16",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^16.0.1",
		"eslint-plugin-promise": "^6.1.1",
		"ovsx": "^0.8.2",
		"prettier": "^3.0.0",
		"typescript": "^5.1.6"
	}
}