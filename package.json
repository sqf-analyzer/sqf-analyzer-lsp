{
  "name": "sqf-analyzer",
  "description": "SQF language server",
  "license": "MIT",
  "version": "0.0.1",
  "categories": [],
  "keywords": [
    "language-server",
    "tower-lsp"
  ],
  "repository": {
    "url": "https://github.com/sqf-analyzer/sql-analyzer-lsp"
  },
  "publisher": "SQF-analyzer",
  "engines": {
    "vscode": "^1.66.0"
  },
  "activationEvents": [
    "onLanguage:sqf"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sqf",
        "extensions": [
          ".sqf"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "sqf-analyzer",
      "properties": {
        "sqf-analyzer.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "postinstall": "cd client && pnpm i",
    "vscode:prepublish": "pnpm run esbuild-base --minify",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "pnpm run esbuild-base -- --sourcemap",
    "esbuild-watch": "pnpm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "rm -rf dist && tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "pnpm run compile && pnpm run lint",
    "test": "node ./out/test/runTest.js",
    "build": "webpack --config webpack.config.js",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "cross-env": "^7.0.2",
    "electron-rebuild": "^1.11.0",
    "esbuild": "^0.15.10",
    "eslint": "^7.6.0",
    "glob": "^7.1.7",
    "mocha": "^8.0.1",
    "ts-loader": "^9.4.4",
    "typescript": "^4.4.3",
    "vscode-test": "^1.4.0",
    "vscode-uri": "^3.0.2",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "configurationDefaults": {
    "sqf": {
      "editor.semanticHighlighting.enabled": true
    }
  }
}